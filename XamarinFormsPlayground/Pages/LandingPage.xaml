<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:XamarinFormsPlayground.Views;assembly=XamarinFormsPlayground"
             xmlns:pages="clr-namespace:XamarinFormsPlayground.Pages;assembly=XamarinFormsPlayground"
             x:Class="XamarinFormsPlayground.Pages.LandingPage">
  <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <RelativeLayout x:Name="RelativeLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
      <views:BackgroundView x:Name="BackgroundView" />

      <StackLayout Orientation="Vertical">
        <Label Text="Other content" FontSize="Medium" TextColor="White"></Label>

        <Button Text="Go to other page" FontSize="Medium" TextColor="White" Command="{Binding NextCommand}"></Button>
      </StackLayout>
    </RelativeLayout>
  </AbsoluteLayout>
</pages:BasePage>